# Ambiente
VITE_NODE_ENV=development

# API WordPress
VITE_WP_API_URL=https://seu-site.com/wp-json
VITE_WP_API_VERSION=wp/v2

# Autenticação
VITE_WP_CLIENT_ID=seu-client-id
VITE_WP_CLIENT_SECRET=seu-client-secret

# Configurações do App
VITE_APP_NAME=WP Simplify Dashboard
VITE_APP_URL=http://localhost:5173
VITE_APP_VERSION=0.1.0
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_LMS=true
VITE_ENABLE_BACKUPS=true
VITE_ENABLE_STATISTICS=true

# Storage
VITE_STORAGE_PREFIX=wp_simplify_

# Server
PORT=3000 